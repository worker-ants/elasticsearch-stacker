{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
    }
  },
  "include": ["src/**/*.ts"],
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "tsconfig",
    "**/*.spec.ts"
  ]
}
